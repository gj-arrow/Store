@model IEnumerable<string>

@Html.ActionLink("Все категории", "List", "Product", null,
    new { @class = "btn-block center" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
{
    controller = "Product",
    action = "List",
    category = link,
    page = 1
}, new
{
    @class = "btn-block center"
            + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
})
}